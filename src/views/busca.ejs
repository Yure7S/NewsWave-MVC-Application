<%- include("partials/header.ejs")%>
<main id="busca">
    <h1>VocÃª pesquisou por: <%= contentBusca%></h1>
    <div class="mais-lidas">
        <h3><%= result.length%> resultados encontrados</h3>
        <div class="container">
            <%for(let item of result){%>
                <div class="new">
                    <div class="image">
                        <img src="<%= item.image%>" alt="Fotografia da natureza">
                    </div>
                    <div class="content">
                        <h4><%= item.title%></h4>
                        <span><i class="fa-regular fa-eye"></i><span><%= item.views%></span></span>
                        <p><%= item.content.substr(0, 200) + "..."%></p>
                        <a href="<%= item.slug%>">Ler mais<i class="fa-solid fa-arrow-right"></i></i></a>
                    </div>
                </div>
            <%}%>
        </div>               
    </div>
</main>
